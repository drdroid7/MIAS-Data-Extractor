{
    "manifest_version": 3,
    "name": "Biochemical Data Extractor",
    "version": "1.0",
    "description": "Extract biochemical test data from a protected website and store it in an Excel file.",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "scripting",
        "downloads",
        "activeTab"
    ],
    "host_permissions": [
        "https://mias.smc.saveetha.com/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },

    "content_scripts": [
        {
            "matches": ["https://mias.smc.saveetha.com/Casesheet/Casesheetview.aspx*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],

    "web_accessible_resources": [
        {
            "resources": ["view.html"],
            "matches": ["<all_urls>"]
        }
        ,
        {
            "resources": [
                "libs/localforage.min.js", 
                "popup.html", 
                "view.js"
            ],
            "matches": ["https://mias.smc.saveetha.com/*"]
        }
    ],

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}